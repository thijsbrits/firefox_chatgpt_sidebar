{
  "manifest_version": 2,
  "name": "ChatGPT Sidebar",
  "version": "1.0",
  "permissions": ["<all_urls>"],
  "sidebar_action": {
    "default_panel": "sidebar.html"
  },
  "browser_action": {},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }
}
